
public class AlphabetRunnable implements Runnable{

	@Override
	public void run() {
		
		for(char alphabet = 'a'; alphabet <= 'z';alphabet++)
		{
			 System.out.println(alphabet);
		}
		
		for(char alphabet = 'A'; alphabet <= 'Z';alphabet++)
		{
			 System.out.println(alphabet);
		}
	}
	
	private void waitALittleBitPleaseThankYou()
	{
		try {
			Thread.sleep(500);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
}
